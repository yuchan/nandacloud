.wrap
  %p
    %span= start_ip
    %span
      \~
    %span= end_ip

  %form{action:'/instances', method:'POST'}
    %h1
      Create new instance
    name:
    %input{type: 'text', name:'name'}
    keypair:
    %select{name:'keypair'}
      - sshkeys.each do |key|
        %option{value:key.id}
          = key.name
    %input{type:'submit'}
    %input{type:'hidden',name:'operation',value:'create'}

  %form{action:'/instances', method:'POST'}
    %h1
      Start instance
    name:
    %input{type: 'text', name:'name'}
    %input{type:'submit'}
    %input{type:'hidden',name:'operation',value:'start'}

  %form{action:'/instances', method:'POST'}
    %h1
      Stop instance
    name:
    %input{type: 'text', name:'name'}
    %input{type:'submit'}
    %input{type:'hidden',name:'operation',value:'stop'}

  %form{action:'/instances', method:'POST'}
    %h1
      Delete instance
    name:
    %input{name:'name'}
    %input{type:'submit'}
    %input{type:'hidden', name:'_method', value:'DELETE'}
