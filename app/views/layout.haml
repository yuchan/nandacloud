!!!
%html
  %head
    %title NandaCloud Console
    %meta{:"http-equiv"=>"Content-Type", :content=>"text/html", :charset=>"utf-8"}
    %link{:rel=>"stylesheet", :type=>"text/css", :href=>"css/bootstrap.min.css"}
  %body
    %nav.navbar.navbar-default{:role => "navigation"}
      .container-fluid
        / Brand and toggle get grouped for better mobile display
        .navbar-header
          %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "/"} NandaCloud Console
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li
              %a{:href => "/instances"} Instances
            %li
              %a{:href => "sshkeys"} Keypairs
          %ul.nav.navbar-nav.navbar-right
            %li
              %a{:href => "https://yuchan.github.io/nandacloud"}
                About us

    %font.message{:color => "red", :size => "+2"}
      != message
    
    != yield
    %script{src:"http://code.jquery.com/jquery-1.11.2.min.js", type:"text/javascript"}
    %script{src:"js/bootstrap.min.js", type:"text/javascript"}
